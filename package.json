{
    "name": "fuwa.js",
    "version": "0.2.0",
    "description": "The new way of making discord bots",
    "main": "dist/index.js",
    "types": "types/index.d.ts",
    "repository": "https://github.com/fuwajs/fuwa.js.git",
    "author": "Artrix <39530102+Artrix9095@users.noreply.github.com>",
    "license": "MIT",
    "private": false,
    "scripts": {
        "build": "npx gulp",
        "lint": "npx eslint ./src/**/*.ts --fix",
        "watch": "npx yarn build -w",
        "format": "prettier --ignore-path .gitignore --write .",
        "test": "nodemon tests/index",
        "sync-ts-path": "ts-node -r tsconfig-paths/register ./src/index.ts"
    },
    "dependencies": {
        "undici": "^4.7.0",
        "ws": "^8.2.2"
    },
    "optionalDependencies": {
        "erlpack": "^0.1.3"
    },
    "devDependencies": {
        "@types/module-alias": "^2.0.1",
        "@types/node": "^16.10.1",
        "@types/ws": "^8.2.0",
        "@typescript-eslint/eslint-plugin": "^4.31.2",
        "@typescript-eslint/parser": "^4.31.2",
        "del": "^6.0.0",
        "eslint": "^7.32.0",
        "eslint-plugin-prettier": "^4.0.0",
        "gulp": "^4.0.2",
        "gulp-eslint": "^6.0.0",
        "gulp-sourcemaps": "^3.0.0",
        "gulp-typescript": "^6.0.0-alpha.1",
        "module-alias": "^2.2.2",
        "nodemon": "^2.0.13",
        "prettier": "^2.4.1",
        "ts-node": "^10.2.1",
        "tsconfig-paths": "^3.11.0",
        "typescript": "^4.4.3"
    },
    "eslintConfig": {
        "plugins": [
            "prettier"
        ],
        "extends": [
            "plugin:@typescript-eslint/recommended"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "project": "./tsconfig.json",
            "ecmaVersion": 2018,
            "sourceType": "module"
        },
        "rules": {
            "prettier/prettier": [
                "error",
                {},
                {
                    "usePrettierrc": true
                }
            ],
            "@typescript-eslint/no-explicit-any": "off",
            "@typescript-eslint/ban-ts-comment": "off",
            "@typescript-eslint/explicit-module-boundary-types": "off"
        }
    },
    "_moduleAliases": {
        "@root/*": "./*",
        "@util/*": "/util/*",
        "@lib/*": "/lib/*",
        "@interfaces/*": "/interfaces/*"
    }
}

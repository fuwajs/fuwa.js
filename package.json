{
    "name": "fuwa.js",
    "version": "3.0.0",
    "description": "The new way of making discord bots",
    "main": "out/dist/index.js",
    "types": "out/types/index.d.ts",
    "repository": "https://github.com/fuwajs/fuwa.js.git",
    "author": "Artrix <39530102+Artrix9095@users.noreply.github.com>",
    "license": "MIT",
    "private": false,
    "scripts": {
        "pretest": "npx yarn build",
        "build": "npx gulp",
        "build:deno": "npx denoify",
        "build:all": "npx yarn build && npx yarn build:deno",
        "prepublish": "npx yarn build:all",
        "testbot:deno": "deno run --allow-all --no-check --unstable test/bot/index.ts",
        "lint": "npx eslint ./src/**/*.ts --fix",
        "watch": "npx yarn build watch",
        "format": "npx prettier --ignore-path .gitignore --write ./src",
        "testbot": "nodemon test/bot/index --ignore out",
        "test": "jest test/tests",
        "sync-ts-path": "ts-node -r tsconfig-paths/register ./src/index.ts",
        "docs": "typedoc"
    },
    "dependencies": {
        "undici": "*",
        "ws": "^8.2.2"
    },
    "optionalDependencies": {
        "erlpack": "^0.1.3"
    },
    "denoify": {
        "out": "out/deno"
    },
    "engines": {
        "node": ">=16"
    },
    "devDependencies": {
        "@types/jest": "^27.0.2",
        "@types/node": "^16.10.1",
        "@types/ws": "^8.2.0",
        "@typescript-eslint/eslint-plugin": "^4.31.2",
        "@typescript-eslint/parser": "^4.31.2",
        "del": "^6.0.0",
        "denoify": "^0.10.5",
        "eslint": "^7.32.0",
        "eslint-plugin-prettier": "^4.0.0",
        "gulp": "^4.0.2",
        "gulp-eslint": "^6.0.0",
        "gulp-sourcemaps": "^3.0.0",
        "gulp-typescript": "^6.0.0-alpha.1",
        "jest": "^27.2.4",
        "nodemon": "^2.0.13",
        "prettier": "^2.4.1",
        "ts-node": "^10.2.1",
        "tsconfig-paths": "^3.11.0",
        "typedoc": "^0.22.10",
        "typescript": "^4.4.3"
    },
    "eslintConfig": {
        "plugins": [
            "prettier"
        ],
        "extends": [
            "plugin:@typescript-eslint/recommended"
        ],
        "parser": "@typescript-eslint/parser",
        "parserOptions": {
            "project": "./tsconfig.json",
            "ecmaVersion": 2018,
            "sourceType": "module"
        },
        "rules": {
            "prettier/prettier": [
                "error",
                {},
                {
                    "usePrettierrc": true
                }
            ],
            "@typescript-eslint/no-explicit-any": "off",
            "@typescript-eslint/ban-ts-comment": "off",
            "@typescript-eslint/explicit-module-boundary-types": "off"
        }
    }
}
